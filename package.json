{
  "name": "express-html-validator",
  "description": "Automatic HTML validation middleware for Express applications.",
  "author": "Roosevelt Framework Team <rooseveltframework@gmail.com>",
  "contributors": [
    {
      "name": "Contributors",
      "url": "https://github.com/rooseveltframework/express-html-validator/graphs/contributors"
    }
  ],
  "version": "0.1.2",
  "files": [
    "templates",
    "index.js"
  ],
  "homepage": "https://github.com/rooseveltframework/express-html-validator",
  "license": "CC-BY-4.0",
  "main": "index.js",
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=12.0.0"
  },
  "engineStrict": true,
  "dependencies": {
    "app-root-dir": "~1.0.0",
    "es6-template-strings": "~2.0.0",
    "fs-extra": "~9.0.0",
    "html-validate": "^3.0.0",
    "prismjs": "~1.21.0",
    "tamper": "~1.1.0"
  },
  "devDependencies": {
    "ava": "~3.12.0",
    "c8": "~7.3.0",
    "codecov": "~3.7.0",
    "eslint": "~7.9.0",
    "eslint-plugin-ava": "~11.0.0",
    "express": "~4.17.0",
    "husky": "~4.3.0",
    "lint-staged": "~10.3.0",
    "proxyquire": "~2.1.0",
    "standard": "~14.3.0",
    "supertest": "~4.0.0",
    "teddy": "~0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rooseveltframework/express-html-validator.git"
  },
  "keywords": [
    "Express",
    "Express.js",
    "html",
    "vallidation"
  ],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "plugins": [
      "ava"
    ],
    "rules": {
      "ava/no-only-test": "error"
    }
  },
  "scripts": {
    "codecov": "codecov",
    "coverage": "c8 --reporter=text --reporter=lcov ava",
    "lint": "standard && eslint test/test.js",
    "test": "ava"
  },
  "lint-staged": {
    "*.js": "standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && eslint test/test.js"
    }
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/kethinov"
  }
}
